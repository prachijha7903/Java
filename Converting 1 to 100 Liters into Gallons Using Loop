class GallonsToLitersLoop{
      public static void main(String[] args){
        double gallons ,litres;
         for(gallons = 1 ; gallons <= 100 ; gallons++){ 
            litres = gallons * 3.7854 ;  
            System.out.println(gallons + " gallons is equal to " + litres + " litres");
         }
      }
}
